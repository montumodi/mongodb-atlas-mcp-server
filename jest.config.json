{
  "testEnvironment": "node",
  "transform": {},
  "testMatch": [
    "**/test/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "verbose": true,
  "transformIgnorePatterns": [
    "node_modules/(?!@modelcontextprotocol)"
  ]
}
